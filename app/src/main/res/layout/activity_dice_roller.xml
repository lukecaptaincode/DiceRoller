<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lukecaptaincode.diceroller.DiceRoller"
    android:background="#000000"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/DiceRoller_noDice_lbl"
        android:id="@+id/DiceRoller_noDice_lbl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:textSize="40sp"
        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:height="50dp"
        android:width="70dp"
        android:id="@+id/DiceRoller_noDice_txt"
        android:textColor="#000000"
        android:color="#4F4F4F"
        android:gravity="center_horizontal"
        android:background="@drawable/editextback"
        android:layout_below="@+id/DiceRoller_noDice_lbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="100dp"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:longClickable="false"
        android:linksClickable="false"
        android:textSize="35sp"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/DiceRoller_noSides_lbl"
        android:id="@+id/DiceRoller_noSides_lbl"
        android:layout_marginTop="36dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/DiceRoller_noDice_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:height="50dp"
        android:width="70dp"
        android:id="@+id/DiceRoller_noSides_txt"
        android:textColor="#000000"
        android:color="#4F4F4F"
        android:gravity="center_horizontal"
        android:background="@drawable/editextback"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="100dp"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:longClickable="false"
        android:linksClickable="false"
        android:textSize="35sp"
        android:layout_below="@+id/DiceRoller_noSides_lbl"
        android:layout_alignParentLeft="true"
        android:text="6"
        android:shadowColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DiceRoller_roll_btn"
        android:id="@+id/DiceRoller_roll_btn"
        android:background="@drawable/buttonshapesmall"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/DiceRoller_MinusSort_rdb"
        android:layout_alignLeft="@+id/adView"
        android:layout_alignStart="@+id/adView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DiceRoller_shake_lbl"
        android:id="@+id/DiceRoller_shake_lbl"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/DiceRoller_roll_btn"
        android:layout_toRightOf="@+id/DiceRoller_noDice_lbl"
        android:layout_toEndOf="@+id/DiceRoller_noDice_lbl" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/diceRoller_adId">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sort by:"
        android:id="@+id/DiceRoller_Filter_lbl"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:height="50dp"
        android:width="70dp"
        android:id="@+id/DiceRoller_Filter_txt"
        android:textColor="#000000"
        android:color="#4F4F4F"
        android:gravity="center_horizontal"
        android:background="@drawable/editextback"
        android:maxHeight="50dp"
        android:maxWidth="100dp"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:longClickable="false"
        android:linksClickable="false"
        android:textSize="35sp"
        android:text="0"
        android:shadowColor="#000000"
        android:layout_alignTop="@+id/DiceRoller_PlusSort_rdb"
        android:layout_toRightOf="@+id/DiceRoller_Filter_lbl"
        android:layout_toEndOf="@+id/DiceRoller_Filter_lbl" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/DiceRoller_PlusSort_rdb"
        android:layout_below="@+id/DiceRoller_Filter_lbl"
        android:layout_alignLeft="@+id/DiceRoller_roll_btn"
        android:layout_alignStart="@+id/DiceRoller_roll_btn" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/DiceRoller_MinusSort_rdb"
        android:layout_below="@+id/DiceRoller_Filter_txt"
        android:layout_alignLeft="@+id/DiceRoller_PlusSort_rdb"
        android:layout_alignStart="@+id/DiceRoller_PlusSort_rdb" />


</RelativeLayout>
